---
const { imgURL, desc, name, position } = Astro.props
---

<div class='teamCard-container'>
  <img src={imgURL} alt='fotito'/>
  <p class='card-desc'>{desc}</p>
  <label>{name}</label>
  <label>{position}</label>
</div>

<style>
  .teamCard-container {
    min-width: 400px;
    width: 400px;
    display: flex;
    flex-direction: column;
    margin: 30px 20px 20px 20px;
    align-items: center
  }
  .card-desc {
    font-size: 25px;
    text-align: center;
    width:70%;
    justify-content: center;
  }
</style>
